@using demoprojMVC.Model
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
    <style type="text/css">
        .navbar-right {
            float: right;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
@{
    UserInfo userInfo =  Session["UserInfo"] as UserInfo;
}
<div id="nav" class="navbar navbar-inverse" role="navigation">
    <a class="navbar-brand" href="#">
        <span class="hidden-xs">信息工程学院学工平台</span>
        <div class="visible-xs">信息工程学院</div>
        <div class="visible-xs">学工平台</div>
    </a>
    <div class="navbar-text navbar-right">
        <span style="float: left; margin-right: 10px">欢迎您：@userInfo.ShowName</span>
        <span class="glyphicon glyphicon-th-list visible-xs glyphicon-th-large" style="float: left;" id="menu"></span>
    </div>
    
</div>
<div class="row panel">
    <div class="col-xs-12">
        @RenderBody()
    </div>

</div>
<div id="menuList" class="" style="z-index: 101; position: absolute; right: 0; top: 20px">
    @Html.Action("Menu", "Home")
</div>
<script>
    $(function() {
        $("#menuList").hide();
        //设置导航的位置
        var navHeight = $("#nav").height();
        var menuList = $("#menuList");
        var styleStr = menuList.attr("style") + " top: " + navHeight + "px;";
        menuList.attr("style", styleStr);
        $("#menu").click(function() {
            $("#menuList").toggle();
        });
    })
</script>
</body>
</html>