@using demoprojMVC.Model
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Scripts/jquery-ui-1.12.1.custom/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>

    <style type="text/css">
         .navbar-right {
            float: right;
            margin-right: 15px;
            margin-left: 15px;
        }
    </style>
</head>
<body>
@{
    UserInfo userInfo = Session["UserInfo"] as UserInfo;
}
<div class="navbar navbar-inverse" role="navigation" id="nav">
    <a class="navbar-brand" href="#">信息工程学院学工平台</a>
    <div class="navbar-text navbar-right float-rt">
        <span style="float: left; margin-right: 10px">欢迎您：@userInfo.ShowName</span>
        <span class="glyphicon glyphicon-th-list visible-xs glyphicon-th-large" style="float: left;" id="menu"></span>
        <span class="" style="float: left; margin: 0 10px;"><a href="@Url.Action("LoginOut","UserLogin")" class="glyphicon glyphicon-remove-circle"></a></span>
        
    </div>
</div>
<div class="row panel">
    <div id="categories" class="col-sm-2 hidden-xs">
        @Html.Action("Menu", "Home")
    </div>
    <div class="col-sm-9 col-xs-12">
        @RenderBody()
    </div>

</div>
    <div id="menuList" class="" style="z-index: 101; position: absolute; right: 0;">
        @Html.Action("Menu", "Home")
    </div>
    <script>
    $(function() {
        $("#menuList").hide();
        //设置导航的位置
        var navHeight = $("#nav").height();
        var menuList = $("#menuList");
        var styleStr =menuList.attr("style") + " top: " + navHeight +"px;";
        menuList.attr("style", styleStr);
        $("#menu").click(function () {
            

            $("#menuList").toggle();
        });
    })
    </script>
</body>
</html>